<body class="userOrderJewelry">

  <%- include ../../headerbar.ejs %>

  <%- include ../userHeaderNav.ejs %>

  <div class="container">
    <div class="router" id="router">
      <el-breadcrumb separator-class="el-icon-arrow-right">
        <el-breadcrumb-item>
          <a href="/">首页</a>
        </el-breadcrumb-item>
        <el-breadcrumb-item :to="{ path: '/' }">
          <a href="/user/acc_info">个人中心</a>
        </el-breadcrumb-item>
        <el-breadcrumb-item>申请售后</el-breadcrumb-item>
      </el-breadcrumb>
    </div>
  </div>

  <div id="main" class="main">
    <div class="clearfix container">
      <div class="userLeftNav">
        <%- include ../userLeftNav.ejs %>
      </div>
      <div class="userRightContent">

        <div id="orderArbitrate">

          <div id="mainForm" v-for="(item,i) in data.orderGoodVOList">
            <div class="goods-info">
              <div class="shop-name">{{data.sellUserName}}</div>
              <el-row>
                <el-col :span="4">
                  <img :src="item.skuMainPic | formatImg" alt="">
                </el-col>
                <el-col :span="10">
                  <div class="goods-name">{{item.skuName}}</div>
                  <span class="goods-sku" v-for="(subItem,subI) in item.skuExplain">
                    <span>{{subItem.specsName}}</span>
                    <span>：</span>
                    <span>{{subItem.attrValue}}</span>
                    <span v-if="subI !== item.skuExplain.length-1">&nbsp;&nbsp;;&nbsp;&nbsp;</span>
                  </span>
                </el-col>
                <el-col :span="5" class="tc">
                  <div class="goods-count">数量：{{item.goodsNumber}}</div>
                </el-col>
                <el-col :span="5" class="tr">
                  <div class="goods-total">总价：<span class="price">￥{{item.totalPrice}}</span></div>
                  <span class="goods-freice">( 含运费：￥0.00 )</span>
                </el-col>
              </el-row>
            </div>

            <div class="rufund-info">
              <p>售后类型：仲裁</p>
              <p>退款金额：<span class="price">￥{{data.goodsTotalMoney}}</span></p>
            </div>

            <div class="refund-reason">
              <div class="title">仲裁原因</div>
              <div class="body">
                <div>
                  <textarea placeholder="请描述您遇到的问题" datatype="s1-500" name="comments" v-model="form.comments"
                    nullmsg="请输入问题描述" maxlength="500" errormsg="问题描述不能为空"></textarea>
                </div>
                <p class="Validform_checktip"></p>

                <div class="clearfix">
                  <div class="fl img clearfix">
                    <div class="fl uploadbox triggerFile" data-target="img">

                    </div>
                    <template v-for="item in form.picList">
                      <a :data-name="item"><img :src="item | formatImg"></a>
                    </template>
                  </div>

                </div>
                <p class="image-tip">9张以内，支持jpg、gif、png格式，大小：3m以内</p>
                <p class="Validform_checktip"></p>
              </div>
            </div>

            <div class="btn-box tc">
              <el-button type="danger" class="submit" @click="submit($event)">提交</el-button>
            </div>
          </div>

        </div>

      </div>
    </div>
  </div>

  <%- include ../../footer.ejs %>

  <form id="form1" class="hide" method="post" enctype="multipart/form-data">
    <input type="file" name="cloudfile" accept="image/*" onchange="uploadGoodsImg(this)">
  </form>
  <script>
    $(".userLeftNav li[data-target='refund']").addClass("cur");

    var routerVm = new Vue({
      el: "#router"
    })

    var orderId = utils.getUrlParam("orderId");
    var orderNumber = utils.getUrlParam("orderNumber");

    var detailVm = new Vue({
      el: "#orderArbitrate",
      data: {
        data: {},
        picList: [],
        form: {
          comments: '',
          refundOrderId: utils.getUrlParam("orderId"),
          picList: [],
          arbitrationType: 1
        }
      },
      mounted: function () {
        var self = this;
        utils.ajax({
          url: "/api/order/info/" + orderNumber,
          type: "get",
          success: function (data) {
            self.data = data.data
          }
        })

        window.validform = $("#mainForm").Validform({
          tiptype: 2
        })
        $.Tipmsg.r = "";
      },
      methods: {
        submit: function (e) {
          var self = this;
          if (validform.check(false)) {
            utils.ajax({
              url: "/api/order/arbitrationAdd",
              data: JSON.stringify(this.form),
              el: e.target,
              success: function (data) {
                if (data.success) {
                  utils.alert("success", "操作成功");
                  setTimeout(function () {
                    location.href = "../../user/order/refund"
                  }, 2000)
                } else {
                  utils.alert("danger", data.msg)
                }
              }
            })
          }
        }
      },
      filters: {
        formatImg: function (str) {
          return utils.formatImg(str);
        }
      }
    })

    $(function () {

      $(document).on("click", ".triggerFile", function (e) {
        var t = $(e.currentTarget).attr("data-target");
        target = t;
        $("#form1 input").trigger("click");
      }).on("click", ".toGoodDetail", function (e) {
        var self = $(e.currentTarget);
        var source = self.attr('data-source');
        var goodId = self.attr('data-goodid');
        if (source == 5) {
          //设计室
          window.location.href = "../../design/product_detail?id=" + goodId
        } else {
          //制造间
          window.location.href = "../../manufacture/product_detail?id=" + goodId
        }
      })

    })
    //商品图片上传
    function uploadGoodsImg(self) {
      var uploadFile = new FormData($("#form1")[0]);
      $.ajax({
        url: '../../file/upload',
        type: 'POST',
        data: uploadFile,
        async: false,
        cache: false,
        contentType: false, //不设置内容类型
        processData: false, //不处理数据
        success: function (data) {
          detailVm.form.picList.push(data.data);
          $("#form1 input").val("");
        },
        error: function () {

        }
      })
    }
  </script>

</body>

</html>