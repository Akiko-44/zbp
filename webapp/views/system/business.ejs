	width: 1040px;
	margin-top: 60px;
}
.contentWrap>ul li {
	float: left;
	width: 220px;
	position: relative;
	margin: 0 20px;
}
.contentWrap .applyBtn {
	background: #fff;
	position: absolute;
	left: 50%;
	width: 88px;
	line-height: 26px;
	margin-left: -44px;
	bottom: 22px;
	color: #931822;
	border-radius: 4px;
}
</style>
