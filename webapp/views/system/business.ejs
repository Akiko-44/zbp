<body class="business-bd">
	
	
	<div class="contentWrap">
	
		<div class="stepWrap">
			<ul class="clearfix">
				<li class="fl cur">
					<span>
						<i class="icon icon-businessStep1"></i>
					</span>
					<p>注册账号</p>
				</li>
				<li class="fl cur" style="margin-left: 150px">
					<span>
						<i class="icon icon-businessStep2_2"></i>
