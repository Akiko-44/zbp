					</span>
					<p>填写资料</p>
				</li>
			</ul>
		</div>
		
		<ul class="clearfix" id="merchant">
			<li>
				<img src="../src/img/system/jewellery.png" width="100%">
				<a class="btn applyBtn" data-href="../apply_store" data-source="1">立即申请</a>
			</li>
			<li>
				<img src="../src/img/system/design.png" width="100%">
				<a class="btn applyBtn" data-href="../apply_office" data-source="2">立即申请</a>
			</li>
			<li>
				<img src="../src/img/system/manufacture.png" width="100%">
				<a class="btn applyBtn" data-href="../apply_room" data-source="3">立即申请</a>
			</li>
			<li>
				<img src="../src/img/system/Exchange.png" width="100%">
				<a class="btn applyBtn" data-href="../apply_provider">立即申请</a>
			</li>
		</ul>
		
	</div>

<script>
$(function(){
	$(document).on("click", '.applyBtn', function(e){
		var val = $(e.currentTarget).attr("data-source")
		var href = $(e.currentTarget).attr("data-href")
		$.ajax({
			url: "/api/userCenter/merchantInfo/checkUser?source="+val,
			type: "get",
			beforeSend : function(request) {
			　　request.setRequestHeader("Authorization", utils.getCookie("token"))
			},
			success: function(data){
				if(data.success){
					window.location.href = href
				}else{
					utils.alert("danger", data.msg);
				}
			}
		})
	})
})
	
</script>
