	<style type="text/css">
		.jewelry-shopList .navWrap {
			margin: 20px auto;
			font-size: 0;
		}

		.jewelry-shopList .navWrap li {
			display: inline-block;
			padding: 0 30px;
			color: #585858;
			font-size: 14px;
			line-height: 41px;
			border: 1px solid #aaaaaa;
			cursor: pointer;
		}

		.jewelry-shopList .navWrap li.cur {
			background: #DF735A;
			color: #fff;
			border: 1px solid #DF735A;
		}

		.jewelry-shopList .shop-list li {
			display: inline-block;
			width: 285px;
			height: 241px;
			background: #FFFFFF;
			margin-right: 20px;
			margin-bottom: 20px;
			cursor: pointer;
		}

		.jewelry-shopList .shop-list li:nth-child(4n+0) {
			margin-right: 0;
		}

		.jewelry-shopList .shop-list li img {}

		.jewelry-shopList .shop-list .shop-info {
			padding: 15px;
			font-size: 12px;
			color: #999999;
		}

		.jewelry-shopList .shop-list .merchant-name {
			font-size: 14px;
			color: #666666;
		}

		.jewelry-shopList .shop-list .merchant-cat {
			white-space: nowrap;
			overflow: hidden;
			text-overflow: ellipsis;
			padding: 10px 0;
		}

		.jewelry-shopList .shop-list .addr {
			overflow: hidden;
			margin-top: 10px;
		}

		.jewelry-shopList .shop-list .addr img {
			vertical-align: text-bottom;
			margin: 0 5px;
		}

		.jewelry-shopList .shop-msg {
			padding-top: 10px;
			margin-left: 10px;
		}

		.jewelry-shopList .shop-msg h2 {
			font-weight: bolder;
		}

		.jewelry-shopList .shop-msg p {
			margin-top: 15px;
		}

		.jewelry-shopList .recommend span {
			color: #666666;
			font-size: 16px;
			padding: 5px;
		}

		.jewelry-shopList .recommend a {
			display: inline-block;
			margin-left: 20px;
		}

		.jewelry-shopList .exchangeSearch>table span {
			display: inline-block;
			padding: 6px 10px;
			vertical-align: center;
		}

		.jewelry-shopList .exchangeSearch>table span.curs {
			cursor: pointer;
		}

		.exchangeSearch>table td {
			vertical-align: middle
		}

		/* .jewelry-shopList .exchangeSearch>table td.down-more {
			padding-left: 0;
		}

		.jewelry-shopList .exchangeSearch>table .down-more span {
			display: inline-block;
			padding: 0;
			width: 53px;
			height: 24px;
			line-height: 24px;
			text-align: center;
			background: #EAEBF0;
			color: #666666;
			cursor: pointer;
		}

		.jewelry-shopList .exchangeSearch>table td.brand-list {
			padding: 15px 0;
		}

		.jewelry-shopList .brand-list ul {
			min-height: 26px;
			height: 52px;
			overflow: hidden;
		}

		.jewelry-shopList .brand-list ul.min-height {
			height: 52px;
		}

		.jewelry-shopList .brand-list ul.opened {
			height: auto;
		} */

		.jewelry-shopList .brand-list li {
			display: inline-block;
			cursor: pointer;
		}

		.jewelry-shopList .curs.cur,
		.jewelry-shopList .brand-list li.cur {
			background: #DF735A;
			color: white;
		}

		.jewelry-shopList .sale-sort {
			display: inline-block;
			width: 11px;
			height: 28px;
			position: relative;
			vertical-align: text-bottom;
		}

		.jewelry-shopList .sale-sort a {
			display: inline-block;
			width: 0;
			height: 0;
			border-left: 5px solid transparent;
			border-right: 6px solid transparent;
			border-radius: 3px;
			-webkit-border-radius: 3px;
			-moz-border-radius: 3px;
			position: absolute;
			left: 5px;
			top: 17px;
			cursor: pointer;
		}

		.jewelry-shopList .sale-sort a.ascendinga {
			border-bottom-width: 6px;
			border-bottom-style: solid;
			border-bottom-color: #999999;
			top: 12px;
		}

		.jewelry-shopList .ascendinga-active {
			border-bottom-color: #FFFFFF !important;
		}

		/* .jewelry-shopList .sale-sort a.descending{
	    border-top-width: 6px;
	    border-top-style: solid;
	    border-top-color: #999999;
	    top: 20px;
	  }
	  .jewelry-shopList .descending-active{
	  	border-top-color: #FFFFFF!important;
	  } */
		.jewelry-shopList .descending {
			border-top-width: 6px;
			border-top-style: solid;
			border-top-color: #999999;
			top: 20px;
		}

		.jewelry-shopList .descending.descending-opposite {
			transform: rotate(180deg)
		}

		.cur span a.descending,
		.cur span a.descending-opposite {
			border-top-color: #ffffff;
		}

		.jewelry-shopList .no-result {
			position: relative;
			margin: 30px auto;
		}

		.jewelry-shopList .no-result p {
			position: absolute;
			bottom: 40px;
			margin-left: -60px;
			left: 50%;
			font-size: 24px;
			color: #525252;
		}

		#search {
			width: 100%;
			background: #FFFFFF;
			font-size: 14px;
		}

		#search tr {
			height: 40px;
			border-top: 1px solid #E5E5E5;
		}

		#search td {
			color: #585858;
			padding: 6px 18px;
		}

		#search tr td:nth-child(1) {
			width: 70px;
			font-weight: bold;
			text-align: left;
			border-right: 1px solid #e5e5e5;
			color: #333;
		}

		#search tr td:nth-child(2) {
			background: #FFFFFF;
		}

		#search ul li {
			margin-right: 20px;
			cursor: pointer;
		}
	</style>
